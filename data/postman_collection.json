{
  "info": {
    "name": "Restaurant Reservations API - La Terraza",
    "description": "API for area/table management, slot-based availability, and reservations.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "https://YOUR-RAILWAY-URL" },
    { "key": "token", "value": "YOUR_JWT_TOKEN" }
  ],
  "item": [
    {
      "name": "Health & Seed",
      "item": [
        {
          "name": "Health check",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/health"
          }
        },
        {
          "name": "Seed data",
          "request": {
            "method": "POST",
            "header": [],
            "url": "{{baseUrl}}/seed"
          }
        }
      ]
    },
    {
      "name": "Areas & Tables",
      "item": [
        {
          "name": "List areas",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/areas"
          }
        },
        {
          "name": "Add table to area",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"capacity\": 4,\n  \"tableType\": \"STANDARD\",\n  \"code\": \"T4-99\"\n}"
            },
            "url": "{{baseUrl}}/areas/area_terrace/tables"
          }
        },
        {
          "name": "List tables",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/tables"
          }
        },
        {
          "name": "List tables by area",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/tables?areaId=area_terrace"
          }
        }
      ]
    },
    {
      "name": "Availability",
      "item": [
        {
          "name": "Check availability",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/availability?date=2026-02-18&startTime=20:00&partySize=7&durationMin=90&areaPreference=TERRACE",
              "host": ["{{baseUrl}}"],
              "path": ["availability"],
              "query": [
                { "key": "date", "value": "2026-02-18" },
                { "key": "startTime", "value": "20:00" },
                { "key": "partySize", "value": "7" },
                { "key": "durationMin", "value": "90" },
                { "key": "areaPreference", "value": "TERRACE" }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Reservations",
      "item": [
        {
          "name": "Create reservation",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"date\": \"2026-02-18\",\n  \"startTime\": \"20:00\",\n  \"durationMin\": 90,\n  \"partySize\": 4,\n  \"areaPreference\": \"TERRACE\",\n  \"vipRequested\": false,\n  \"customerName\": \"Ana PÃ©rez\",\n  \"phone\": \"+1-809-555-1212\",\n  \"email\": \"ana@example.com\",\n  \"notes\": null,\n  \"occasion\": \"NONE\",\n  \"source\": \"WEB\"\n}"
            },
            "url": "{{baseUrl}}/reservations"
          }
        },
        {
          "name": "List reservations by date",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/reservations?date=2026-02-18"
          }
        },
        {
          "name": "Update reservation status",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"CONFIRMED\"\n}"
            },
            "url": "{{baseUrl}}/reservations/rsv_01HRxxxx/status"
          }
        }
      ]
    }
  ]
}
